datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model User {
  id      Int      @id @default(autoincrement())
  firstName    String
  lastName String
  email   String   @unique
  password    String  
  age Int 
  gender Gender?
  location String
  phoneNumber Int
   role Role?


}
enum Role {
    admin
    user
    airlineCompanies 

}
enum Gender {
  male
  female
}
model voyage {
  id      Int      @id @default(autoincrement())
  companyName    String
  imgUrl String
  description   String  
  price Int 
  departure String
  destination String
  arrival String


}
model destination {
  id      Int      @id @default(autoincrement())
  Name    String
  imgUrl String
  description   String  




 
}






model Review {
  id          Int      @id @default(autoincrement())
  firstName   String
  country     String
  date        String
  ratings     String   
  comments    String
}

