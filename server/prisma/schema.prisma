datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model User {
  id      Int      @id @default(autoincrement())
  firstName    String
  lastName String
  email   String   @unique
  password    String  
  age Int 
  gender Gender?
  location String
  phoneNumber Int
   role Role?
     sentMessages     Message[] @relation("sentMessages")
   rooms             Room[] 
   join JoinChat[] 
}

enum Role {
    admin
    user
    airlineCompanies 

}
enum Gender {
  male
  female
}
model Message {
  id          Int       @id @default(autoincrement()) 
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  from        User      @relation("sentMessages",fields: [fromId], references: [id])
  fromId      Int
  room        Room      @relation(fields: [roomId], references: [id]) // This establishes a many-to-one relationship with Room
  roomId      Int
}
model Room {
  id        Int       @id @default(autoincrement())
  messages  Message[] 
  users     User[]  
  join JoinChat[]  
} 
model JoinChat {
   id          Int       @id @default(autoincrement()) 
  users    User  @relation(fields: [userId], references: [id])
  userId  Int 
  rooms    Room  @relation(fields: [roomId], references: [id])
  roomId  Int
}

model voyage {
  id      Int      @id @default(autoincrement())
  companyName    String
  imgUrl String
  description   String  
  price Int 
  departure DateTime
  departureplace String
  destination String
  arrival DateTime  
  available Boolean   @default(true)
  seats   Int     @default(200)
  
 


}
model destination {
  id      Int      @id @default(autoincrement())
  Name    String
  imgUrl String
  description   String 
  }

model Review {
  id          Int      @id @default(autoincrement())
  firstName   String
  country     String
  date        String
  ratings     String   
  comments    String
}

