datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model User {
  id      Int      @id @default(autoincrement())
  firstName    String
  lastName String
  email   String   @unique
  password    String  
  age Int 
  gender String
  location String
  phoneNumber Int
   role Role?


}
enum Role {
    Admin
    User
    AirlineCompanies 

}
model voyage {
  id      Int      @id @default(autoincrement())
  companyName    String
  imgUrl String
  description   String  
  price Int 
  departure DateTime
  departureplace String
  destination String
  arrival DateTime  
  available Boolean   @default(true)
  seats   Int     @default(10)
  
 


}
model destination {
  id      Int      @id @default(autoincrement())
  Name    String
  imgUrl String
  description   String 
  }

model Review {
  id          Int      @id @default(autoincrement())
  firstName   String
  country     String
  date        String
  ratings     String   
  comments    String
}

